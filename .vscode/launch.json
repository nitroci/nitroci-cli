    "version": "0.2.0",
    "configurations": [
        {
            "name": "NitroCI - Workspaces",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./main.go",
            "args": [
                "workspaces",
                "-w",
                "100",
                "--show",
                "--raw"
            ],
            "env": {}
        },
        {
            "name": "NitroCI - Configure",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./main.go",
            "args": [
                "configure",
                "--show",
                "--raw"
            ],
            "env": {}
        },
        {
            "name": "NitroCI - Build",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./main.go",
            "args": [
                "run",
                "build",
                "-v"
            ],
            "env": {}
        },
        {
            "name": "NitroCI - Plugins Install",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./main.go",
            "args": [
                "plugins",
                "install",
                "-v"
            ],
            "env": {}
        }
    ]
}