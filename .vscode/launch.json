    "version": "0.2.0",
    "configurations": [
        {
            "name": "NitroCI - Build",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./main.go",
            "args": [
                "run",
                "build",
                "-v"
            ],
            "env": {}
        },
        {
            "name": "NitroCI - Pipelines Install",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./main.go",
            "args": [
                "plugins",
                "install",
                "-v"
            ],
            "env": {}
        }
    ]
}